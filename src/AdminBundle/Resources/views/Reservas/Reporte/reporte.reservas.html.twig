{% extends "::base.reporte.html.twig" %}

{% block body %}
    <div class="container-fluid cabecera-contenedor">
        <div class="row">
            <div class="col-xs-9 cabecera-logo-simon text-center">
                <img src="{{ app.request.getSchemeAndHttpHost() }}/bundles/admin/img/logo-simon-header.png" alt="">
            </div>
            <div class="col-xs-3 cabecera-logo-alcaldia">
                <img src="{{ app.request.getSchemeAndHttpHost() }}/bundles/admin/img/logos-inder-alcaldia.png" alt="">
            </div>
        </div>
    </div>
     <div class="container">
        <table class="table table-responsive">
            <caption class="text-center"><b> Reservas</b></caption>
            <thead>
                <tr>
                    <th> Escenario Deportivo </th>
                    <th> Tipo de reserva </th>   
                    <th> Estado </th>
                    <th> Fecha Inicial </th> 
                    <th> Fecha Final </th>            
                </tr>
            </thead>
            <tbody>
                {% for reserva in reservas %}
                    <tr>
                        <td>{{ reserva.escenarioDeportivo }}</td>
                        <td>{{ reserva.tipoReserva }}</td>
                        <td>{{ reserva.estado }}</td>
                        <td>{{ reserva.fechaInicio|date("Y-m-d") }}</td>
                        <td>{{ reserva.fechaFinal|date("Y-m-d") }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}