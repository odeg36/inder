    <a class="btn btn-sm btn-default edit_link" data-toggle="modal" onclick="inder.jugadorEvento.mostrarCarne({{ object.id }})"
       data-target="#open-carne2-{{ object.id }}"
       title="{{ 'btn.accion.crear'|trans }}">
        <i class="fa fa-search" aria-hidden="true"></i>
        {{ 'btn.crear.mostrar'|trans }}
    </a>



<div class="modal fade" id="open-carne2-{{ object.id }}" tabindex="-1" role="dialog" aria-labelledby="open-carne2-{{ object.id }}" aria-hidden="true">
  <div class="modal-dialog" role="document">

    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
       
        <div class="modelo-carne padding-total20 sombra borde-radio d-flex">
            <div class="modal-informacion">
                <div class="modal-btn-img">
                    <img src="{{ app.request.getSchemeAndHttpHost() }}/bundles/admin/img/logos-inder-alcaldia.png">
                </div>
                <div class="modal-datos p-right10">
                    <span style="color: #0D9AF8;" id="carneNombre"></span><br>
                    <span style="color: #0D9AF8;" id="carneEvento"></span><br>
                    <span id="carneCedula"></span><br>
                    <span id="carneEquipo"></span><br>
                    <span id="carneFecha"></span><br>
                </div>
            </div>
                <div class="modal-foto">
                    <div class="foto-carne">
                    <img  id="carneImagen" src="" alt="Foto" style="width:110px;height:160px;">
                    </div>
                    <div class="deporte-rama">
                        
                    <h6 style="color: #0D9AF8;"><span id="carneDisciplina"></span>
                </div>
        </div>
        </div>

      </div>
        <div class="modal-footer centrar marginT0">
                <button type="button" class="btn btn-blanco" data-dismiss="modal">
                    <i class="fa fa-close"></i>
                    {{ 'btn.cerrar' | trans }}
                </button>
        </div>
    </div>

  </div>
</div>


