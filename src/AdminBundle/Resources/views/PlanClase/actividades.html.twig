{% block actividad_type_row %}
    <div class="campoGris row  margenPasos actividad-hijo-eliminar margen-bottom-10 " id="form_actividad_{{ form.vars.name }}" data-id="{{ form.vars.name }}">
        <div class="col-md-6">
            {{form_label(form.actividad)}}
            {{form_widget(form.actividad, { 'attr': {'data-name': form.vars.name , 'class': 'form-control select-actividadtecnico'}})}}
            {% include 'AdminBundle:CRUD:errores_campos.html.twig' with { errors : form.actividad.vars.errors }%}
        </div>
        <div class="col-md-6">
            {{form_label(form.complementacion)}}
            {{form_widget(form.complementacion)}}
            {% include 'AdminBundle:CRUD:errores_campos.html.twig' with { errors : form.complementacion.vars.errors }%}
        </div>
        {{ form_rest(form) }}        
        <div class="col-md-12 collection-remove collection-action btnCentrar "  >
            <div class="col-md-4 btnCentrar campoGris">
                <button type="button" class="btn btn_remover btnRojo">
                    <i class="fa fa-minus-circle" aria-hidden="true"></i>Quitar esta actividad
                </button>
            </div>
        </div>
    </div>
{% endblock %}