
    <style>
        #btnguardar  {
            color: white;
            background: transparent;
            border-color: white;
            src: "{{asset('/bundles/admin/img/botonModal.png')}}"
        }
    </style>
    <!-- Modal -->
<div class="modal-dialog">
    {{ form_start(form, { 'action': path('admin_logic_encuesta_addrespuestas', {'id': encuesta.id}) }) }}
        <!-- Modal content-->
        <div class="modal-content">
            <div  style="background:#0097b0;" class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div style="background:#FFFFFF;"  class="modal-body">
                <div class="row">
                    <div class="circuloIcono"> 
                        <center><i class="fa fa-circle-thin" aria-hidden="true"></i></center>
                           <center><i class="fa fa-thumbs-up" aria-hidden="true"></i></center>
                    </div>
                    
                    <center>{% trans %}formulario_encuesta.ayudaEncuesta{% endtrans %}</center>
    
                    <hr style="border:1px dotted #47c7d7; width:90%">
                    <style>
                       
                       .fa-thumbs-up{
                            color: #00a826;
                            font-size: 40px;
                            position: relative;
                            bottom: 30px;
                       }

                        .fa-circle-thin{
                            color: #00a826;
                            font-size: 80px;
                            position: relative;
                            top: 30px;
                        }

                        .classOpcionesPreguntaEncuesta > input{
                            width: 5%;
                        }
                       
                       .classOpcionesPreguntaEncuesta > label{
                            width: 95%;

                        }
                                              
                    </style>
                </div>
                <div class="row">
                    {% for preguntas in preguntas %}                        
                        <div class="col-md-12 mg-bottom">
                            <strong> {{form_label(form[preguntas.id])}} </strong>
                            <br>
                            {{ form_widget(form[preguntas.id], { 'attr': {'class': 'classOpcionesPreguntaEncuesta' }   }) }}
                            <br>
                        </div>
                    {% endfor %}
                </div>
                
            </div>
            <div style="background:#0097b0;"  class="modal-footer">
                <center>
                    <div class="col-md-12">
                        {{ form_widget(form.save, { 'id': 'btnguardar', 'class' : 'btn btn-default'}) }}
                    </div>
                </center>    
            </div>
            <div style="display: none;">
                {{ form_rest(form) }}
            </div>
        </div>
    {{ form_end(form) }}
</div>

              
                
                
