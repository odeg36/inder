<!-- Información general -->
<div class="row" id="boxMargen">
    <div class="col-md-12" id="boxPadding">
        <div class="box bordeBox">
            <div class="box-header">
                <h3 class="box-title">{{'titulo.mis_reservas'|trans}}</h3>
            </div>
            {% if reserva|length > 0 %}
                {% for reserva in reserva %}
                    <div class="box-info">
                        {% if reserva.escenarioDeportivo %}
                            <h5>{{reserva.escenarioDeportivo.nombre}}</h5>
                            <p>{{reserva.fechaInicio|date('l')|trans}} {{reserva.fechaInicio.date|date('d/m/Y') }}<br>
                            <a href="{{ path('admin_logic_reserva_show', {id:reserva.id} ) }}">    
                                <button type="button" class="btn btnVerde btnSize">
                                    <i class="fa fa-search-plus" aria-hidden="true"></i>
                                    {{ 'btn.crear.mostrar' | trans }}
                                </button>
                            </a>                    
                        </div>
                    {% endif %}
                {% endfor %}
            {% endif %}
       
            <div class="btnVerTodos">
                <a href="{{ path('admin_logic_reserva_list') }}">
                    <button type="button" class="btn btnVerde btnSize">
                        <i class="fa fa-search-plus" aria-hidden="true"></i>
                        {{ 'titulo.ver.todos' | trans }}
                    </button>                    
                </a>
                {% if app.user.hasRole("ROLE_ADMIN_ADMIN_RESERVA_CREATE") %}
                    <a href="{{ path('admin_logic_reserva_create', {id:0}) }}">
                        <button type="button" class="btn btnVerde btnSize">
                            <i class="fa fa-plus-circle" aria-hidden="true"></i>
                            {{ 'titulo.nueva.reserva' | trans }}
                        </button>
                    </a>
                {% endif %}
            </div>
        </div>
    </div>


</div>
