{% set reserva = obtenerReserva(app.user.getId())%}

<!-- Información -->
<div class="row">
    <!-- Información general -->
    <div class="col-md-4 perfil marginB15">
        <div class="col-sm-4 col-md-4 imgCirculo">
            <img src="{{ '/uploads/'~app.user.imagenPerfil }}">
        </div>
        <div class="col-sm-8 col-md-8  btnPerfil">
            <div class="col-md-12">
                {{'titulo.saludo'|trans({'%nombre%':app.user.firstname})| raw}}
            </div>
            <div class="col-md-12">
                <a type="button" class="btn btnVerde btnSize" href="{{path('admin_sonata_user_user_edit',{'id':app.user.id})}}">
                    <i class="fa fa-user" aria-hidden="true"></i>
                    {{'boton.ver_perfil'|trans}}
                </a>
                <a type="button" class="btn btnNaranja btnSize" href="{{path('sonata_user_admin_security_logout')}}">
                    <i class="fa fa-sign-out" aria-hidden="true"></i>
                    {{'boton.salir'|trans}}
                </a>
            </div>

        </div>
    </div>
    <div class="col-md-8 marginB15">
        <div id="carousel" class="carousel slide" data-ride="carousel">
            <!-- Indicators -->
            <ol class="carousel-indicators">
                <li data-target="#carousel" data-slide-to="0" class="active"></li>
            </ol>

            <!-- Wrapper for slides -->
            <div class="carousel-inner" role="listbox">
                <div class="item active">
                    <img src="{{ asset('bundles/admin/img/carousel1.jpg') }}" alt="...">
                </div>
            </div>

            <!-- Controls -->
            <a class="left carousel-control" href="#carousel" role="button" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#carousel" role="button" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
</div>
<!-- Oferta en 4 columnas -->
