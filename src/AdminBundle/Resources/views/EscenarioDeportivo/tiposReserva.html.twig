{% block tiposReserva_type_row %}
    <div class="campoGris row margenPasos tiposReserva-hijo-eliminar margen-bottom-10 " id="form_tiposReserva_{{ form.vars.name }}" data-id="{{ form.vars.name }}">
        {% if form.tipoReserva is defined %}
            <div class="col-md-12">
                <strong>
                    {{form_label(form.tipoReserva)}}
                </strong>
                {{form_widget(form.tipoReserva, {
                        'attr':{
                            'class': 'form-control classTipoReservaDivisiones',
                        } 
                })}}
                {% include 'AdminBundle:CRUD:errores_campos.html.twig' with { errors : form.tipoReserva.vars.errors }%}
            </div>
        {% endif %}
        <div class="col-md-12">
            <strong>
            {{form_label(form.bloqueTiempo)}}
            </strong>
            {{ form_widget(form.bloqueTiempo,{ 'class': 'campoBloque' } ) }}
            {% include 'AdminBundle:CRUD:errores_campos.html.twig' with { errors : form.bloqueTiempo.vars.errors }%}
        </div>
        <div class="col-md-4">
            <strong>
                {{form_label(form.tiempo_minimo)}}
            </strong>
            {{ form_widget(form.tiempo_minimo,{ 'class': 'campoMinimoTiempo' }) }}
            {% include 'AdminBundle:CRUD:errores_campos.html.twig' with { errors : form.tiempo_minimo.vars.errors }%}
        </div>
        <div class="col-md-4">
            <strong>
                {{form_label(form.tiempo_maximo)}}
            </strong>
            {{ form_widget(form.tiempo_maximo,{ 'class': 'campoMaximoTiempo' }) }}
            {% include 'AdminBundle:CRUD:errores_campos.html.twig' with { errors : form.tiempo_maximo.vars.errors }%}
        </div>
        <div class="col-md-4" style="height: 70px;" ></div>
        <div class="col-md-12">
            <strong>
                {{form_label(form.dias_previos_reserva)}}
            </strong>
            {{ form_widget(form.dias_previos_reserva,{ 'class': 'campoUsuariosMinimos' }) }}
            {% include 'AdminBundle:CRUD:errores_campos.html.twig' with { errors : form.dias_previos_reserva.vars.errors }%}
        </div>
        <div class="col-md-4">
            <strong>
                {{form_label(form.usuarios_minimos)}}
            </strong>
            {{ form_widget(form.usuarios_minimos,{ 'class': 'campoUsuariosMinimos' }) }}
            {% include 'AdminBundle:CRUD:errores_campos.html.twig' with { errors : form.usuarios_minimos.vars.errors }%}
        </div>
        <div class="col-md-4">
            <strong>
                {{form_label(form.usuarios_maximos)}}
            </strong>
            {{ form_widget(form.usuarios_maximos,{ 'class': 'campoUsuariosMaximos' }) }}
            {% include 'AdminBundle:CRUD:errores_campos.html.twig' with { errors : form.usuarios_maximos.vars.errors }%}
        </div>
        <div class="col-md-4" style="height: 70px;" ></div>
        {{ form_rest(form) }}        
        <div class="col-md-12 collection-remove collection-action btnCentrar">
            <div class="col-md-4 btnCentrar campoGris">
                <button type="button" class="btn btn_remover btnRojo">
                    <i class="fa fa-minus-circle" aria-hidden="true"></i>Quitar este tipo de reserva
                </button>
            </div>
        </div>        
    </div>
    <script>
        $('.campoBloque').on('change', function() 
        {                    
            if($(this).val() > 60)
            {
                $(".campoBloque").val(15);    
            }

        });

        function isNumberKey(evt)
        {
            var charCode = (evt.which) ? evt.which : event.keyCode;
            console.log(charCode);
            if (charCode != 46 && charCode != 45 && charCode > 31
                    && (charCode < 48 || charCode > 57))
                return false;

            return true;
        }

        $('.campoBloque').keypress(function(eve) {
            if ((eve.which != 46 || $(this).val().indexOf('.') != -1) && (eve.which < 48 || eve.which > 57) || (eve.which == 46 && $(this).caret().start == 0) ) {
            eve.preventDefault();
        }
    

        $('.campoBloque').keyup(function(eve) {
            if($(this).val().indexOf('.') == 0) {    $(this).val($(this).val().substring(1));
