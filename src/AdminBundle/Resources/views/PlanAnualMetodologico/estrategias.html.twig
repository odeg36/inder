{% block estrategia_type_row %}
    <div class="campoGris row  margenPasos estrategia-hijo-eliminar margen-bottom-10 " id="form_estrategia_{{ form.vars.name }}" data-id="{{ form.vars.name }}">
        <div class="col-md-12">
            {{form_label(form.estrategia)}}
            {{form_widget(form.estrategia)}}
            {% include 'AdminBundle:CRUD:errores_campos.html.twig' with { errors : form.estrategia.vars.errors }%}
        </div>
        <div class="col-md-12">
            <label id="oferta_label_{{form.vars.name }}" class="required">{% trans %}formulario.oferta.title{% endtrans %}</label>
            {{form_widget(form.ofertas)}}
            {% include 'AdminBundle:CRUD:errores_campos.html.twig' with { errors : form.ofertas.vars.errors }%}
        </div>
        {{ form_rest(form) }}        
        <div class="col-md-12 collection-remove collection-action btnCentrar "  >
            <div class="col-md-4 btnCentrar campoGris">
                <button type="button" class="btn btn_remover btnRojo">
                    <i class="fa fa-minus-circle" aria-hidden="true"></i>Quitar esta estrategia
                </button>
            </div>
        </div>
    </div>
{% endblock %}